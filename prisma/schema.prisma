
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id String @id @unique // matches kinde user id
  email String @unique

  File File[]

  stripeCustomerId String? @unique @map(name: "stripe_customer_id")
  stripeSubscriptionId String? @unique @map(name: "stripe_subscription_id")
  stripePriceId String? @map(name: "stripe_product_id")
  stripeCurrenctPeriodEnd DateTime? @map(name: "stripe_current_period_end")
}

enum uploadedStatus {
  PENDING
  PROCESSING
  FAILED
  SUCCESS
}

model File {
  id String @id @default(cuid())
  name String

  uploadedStatus uploadedStatus @default(PENDING)

  url String
  key String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User User? @relation(fields: [userId], references: [id])
  userId String?
}


